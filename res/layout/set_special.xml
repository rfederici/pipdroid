<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_repeat"
    android:gravity="center"
    android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="200dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dip"
        android:orientation="vertical" android:layout_marginTop="10dip">

        <!-- Strength  -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_strength"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/Strength"
                android:textColor="#aaffaa"
                android:textSize="21dip" />

            <TextView
                android:id="@+id/strength_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/str_inc"
                android:textColor="#aaffaa"
                android:textSize="21dip" android:layout_margin="0dip"/>

            <ImageView
                android:id="@+id/str_dec"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/strength_stat"
                android:scaleType="fitCenter"
                android:src="@drawable/dec_arrow"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"/>
            
            <ImageView
                android:id="@+id/str_inc"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:src="@drawable/inc_arrow"
                android:layout_marginRight="5dip"/>
        </RelativeLayout>
        
        <!-- Perception -->
        
		<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal">

