<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="250dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dip"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:scrollbarStyle="insideOverlay" >

            <LinearLayout
                android:id="@+id/weaponsList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            
		</ScrollView>


       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.85">

            <Button
                android:id="@+id/barter_button_weap"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="Barter"/>
            
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/skills_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dip"
            android:src="@drawable/barter" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/weapons_left_cap"
                android:layout_width="13dip"
                android:layout_height="20dip"
                android:layout_alignParentLeft="true"
                android:src="@drawable/top_left" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:layout_toLeftOf="@+id/weapons_right_cap"
                android:layout_toRightOf="@+id/weapons_left_cap"
                android:background="@drawable/top_bar" />

            <ImageView
                android:id="@+id/weapons_right_cap"
                android:layout_width="13dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:src="@drawable/top_right" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>