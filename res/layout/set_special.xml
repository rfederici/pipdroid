		<!-- Luck -->
		
		<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_luck"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/luck_stat"
                android:text="@string/Luck"
                android:textColor="#aaffaa"
                android:textSize="21dip"/>

            <TextView
                android:id="@+id/luck_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/luk_inc"
                android:textColor="#aaffaa"
                android:textSize="21dip"/>
            
            <ImageView
                android:id="@+id/luk_dec"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
