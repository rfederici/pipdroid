                android:id="@+id/text_perception"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/Perception"
                android:textColor="#aaffaa"
                android:textSize="21dip"/>

            <TextView
                android:id="@+id/perception_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/per_inc"
                android:textColor="#aaffaa"
                android:textSize="21dip"/>
            
            <ImageView
                android:id="@+id/per_dec"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/perception_stat"
                android:scaleType="fitCenter"
                android:src="@drawable/dec_arrow"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"/>
            
            <ImageView
                android:id="@+id/per_inc"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:src="@drawable/inc_arrow"
                android:layout_marginRight="5dip"/>
            
        </RelativeLayout>
        
		<!-- Endurance -->
        
		<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
